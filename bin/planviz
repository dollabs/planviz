program=$(basename $0)
dir=$(dirname $0)
export PLANVIZ_CWD="$(pwd -P)"
cd "$dir"
cd ..
top="."
jar="$top/target/planviz.jar"
DEFAULT_JVM_OPTS="-server -Xms128m -Xmx512m -Xss512k"
JVM_OPTS="${JVM_OPTS:-DEFAULT_JVM_OPTS}"

# ensure pamela does not use PAGER to guess we are in the repl
unset PAGER

verbose=0

# functions ------------------------------------------
log() {
  # do NOT log now
  # echo $* >> "$logfile"
  echo $*
}

vlog() {
    [ $verbose -eq 0 ] || log "$@"
}

vvlog() {
    [ $verbose -lt 2 ] || log "$@"
}

err() {
  # as log only echos we do not need to repeat this here
  # log "${program}: $*"
  echo >&2 "${program}: $*"
}

# main program -----------------------------------------------
case "$1" in
    (-v|-vv|-vvv|-vvvv|--verbose)
        verbose=$(( $verbose + 1 ))
        ;;
esac

vlog "-- starting $program at $(date) --"
if [ -e "$jar" ]; then
    vlog java $JVM_OPTS -jar "$jar" $@
    java $JVM_OPTS -jar "$jar" $@
else
    args="$@"
    vlog boot run -a "\"$args\""
    boot run -a "$args"
fi
